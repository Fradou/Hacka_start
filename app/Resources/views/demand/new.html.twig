{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10">

                <h1>Welcome to City</h1>
            </div>
            <div class="col-xs-offset-1 col-xs-10">

                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.place, {label:'Location :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.language, {label:'Language needed :', 'attr':{'class' : 'form-control'} })}}
                </div>
                <div class="form-group">
                    {{ form_row(form.situation, {label:'Institution involved :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.situationTitle, {label:'Task required :', 'attr':{'class' : 'form-control'}}) }}
                </div>

                <input type="submit" value="S'inscrire" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
