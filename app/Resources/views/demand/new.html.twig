{% extends "::base.html.twig" %}

{% block content %}
    <div class="container-fluid" style="margin-bottom: 60px;">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10">

                <h1>Welcome to<br> Fontainebleau</h1>
            </div>
            <div class="col-xs-offset-1 col-xs-10">

                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.location, {label:'Location :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.languageNeeded, {label:'Language i need :', 'attr':{'class' : 'form-control'} })}}
                </div>
                <div class="form-group">
                    {{ form_row(form.languageSpoken, {label:'Language i speak :', 'attr':{'class' : 'form-control'} })}}
                </div>
                <div class="form-group">
                    {{ form_row(form.institutionInvolved, {label:'Institution involved :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.institutionName, {label:'Institution name :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.situation, {label:'Task required :', 'attr':{'class' : 'form-control'}}) }}
                </div>

                <div class="form-group hidden">
                    {{ form_row(form.translator, {label:'translator :', 'attr':{'class' : 'form-control hidden'}}) }}
                </div>

                <div class="form-group hidden">
                    {{ form_row(form.applicant, {label:'applicant :', 'attr':{'class' : 'form-control hidden'}}) }}
                </div>

                <input type="submit" value="Search" />
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
