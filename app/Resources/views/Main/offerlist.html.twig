{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1>Available translator</h1>

        <div class="panel-group" id="accordion">
            {% set i=1 %}
            {% for helper in helpers %}

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <div class="profpic">
                                <img src="{{ helper.profilepicture }}"><p>{{ helper.firstName }} {{ helper.lastName }}</p>
                            </div>
                            <div class="ratinglist"><p>Rating : <span>{{ helper.rating }}/5</span><br>
                                    Fee : <span>5â‚¬</span></p>
                            </div>
                            <br>
                        </div>
                        <p>
                            Completed {{ helper.rateNumber }} transactions!<br>
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ i }}">Full profile</a>
                            <a role="button" class="btn btn-success pull-right" href="{{ path('countdown') }}">JustAsk</a>
                        </p>
                    </div>
                    <div id="collapse{{ i }}" class="panel-collapse collapse">
                        <div class="panel-body">
                            <p>Nationality : {{ helper.nationality }}<br>
                            </p>

                        </div>
                    </div>
                </div>
                {% set i=i+1 %}
            {%  endfor %}

        </div>
        <div class="bloc_sp"></div>
    </div>
{% endblock %}
