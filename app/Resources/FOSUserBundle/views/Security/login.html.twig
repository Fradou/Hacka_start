{% extends "FOSUserBundle::layout.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}
{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
    <div class="container text-center">
        <h1>just<span class="askColor">Ask</span></h1>
    </div>
    <div class="container text-center vertCenter">

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <div class="row orange">
                <h2>Login</h2>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                <div class="col-lg-offset-4 col-lg-4 loginLabel">
                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                </div>
                <div class="col-lg-12">
                    <input class="input_login" type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br/>
                </div>
                <div class="col-lg-offset-4 col-lg-4 loginLabel">
                    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                </div>
                <div class="col-lg-12">
                    <input class="input_login" type="password" id="password" name="_password" required="required" /><br/>
                </div>
                <div class="col-lg-12">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label><br/>
                </div>
                <div class="col-lg-offset-4 col-lg-4">
                    <input class="btn btn-lg btn-default btnForm" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
                <div  class="col-lg-offset-4 col-lg-4">
                    <a href="{{ path('fos_user_resetting_request') }}">Forgotten Password ?</a>
                </div>
            </div>
        </form>
        <div class="row">
            <h2>Not Registered yet ?</h2>
            <div class="col-lg-offset-1 col-lg-10">
                <a class="btn btn-orange" href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span> REGISTER</a>
            </div>
            <div class="col-lg-offset-1 col-lg-10">
                
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
{% block footer %}
{% endblock %}
