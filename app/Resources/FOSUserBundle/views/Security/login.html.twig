{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
    <div class="container text-center">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <div class="row orange">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                <div class="col-lg-offset-4 col-lg-4 loginLabel">
                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                </div>
                <div class="col-lg-12">
                    <input class="input_login" type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br/>
                </div>
                <div class="col-lg-offset-4 col-lg-4 loginLabel">
                    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                </div>
                <div class="col-lg-12">
                    <input class="input_login" type="password" id="password" name="_password" required="required" /><br/>
                </div>
                <div class="col-lg-12">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label><br/>
                </div>
                <div class="col-lg-offset-4 col-lg-4">
                    <input class="btn btn-lg btn-default btnForm" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
                <div  class="col-lg-offset-4 col-lg-4">
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
                </div>
            </div>
        </form>
    </div>
{% endblock fos_user_content %}
